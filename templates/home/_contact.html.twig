<form name="form_contact" method="post" action="{{ path('api.contact') }}" id="contact_form">
    <div class="alert alert-dismissible alert-success is-hide" id="js-contact-alert">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <p class="mb-0" id="js-contact-alert-text"></p>
    </div>

    <div class="form-group">
        <label class="label text-white" for="contact_email">{{ 'contact.email.label'|trans|capitalize }} *</label>
        <input type="email" class="form-control form-control-sm" name="contact_email" id="contact_email"
               value="{{ app.user ? app.user.email : '' }}"
               placeholder="{{ 'contact.email.placeholder'|trans|capitalize }}"
               required aria-required="true"
        >
    </div>

    <div class="form-group">
        <label class="label text-white" for="contact_subject">{{ 'contact.subject.label'|trans|capitalize }} *</label>
        <input type="text" class="form-control form-control-sm" name="contact_subject" id="contact_subject" placeholder="{{ 'contact.subject.placeholder'|trans|capitalize }}" required aria-required="true">
    </div>

    <div class="form-group">
        <label class="label text-white" for="contact_message">{{ 'contact.message.label'|trans|capitalize }} * <small>{{ 'contact.message.minlength'|trans|capitalize }}</small></label>
        <textarea type="text" class="form-control" name="contact_message" id="contact_message" required aria-required="true" minlength="10"></textarea>
    </div>

    <small class="text-white">* {{ 'required_fields'|trans|capitalize }}</small>

    <div class="text-right">
        <button class="btn btn-outline-success btn-sm" tyoe="submit" id="js-form-contact">{{ 'btn.submit'|trans|capitalize }}</button>
    </div>
</form>