{% extends 'base.html.twig' %}

{% block title %}Tutomarks - Accueil{% endblock %}

{% block body %}
    <div class="container">

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show mt-3" role="alert">
                    {{ message|capitalize }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="video-row pb-2">
            <div class="video-row-title my-4 ml-1">
                <h2 class="h2">
                    <span class="text-primary me-1"><i class="{{ categoryIcon('videos') }}"></i></span> {{ 'home.last-videos'|trans|capitalize }}

                    {% if app.user %}
                        <div class="float-end">
                            <a href="{{ path('ytlinks.add') }}" class="btn btn-xs btn-outline-primary btn-showlabelonhover">
                                <i class="bi bi-plus"></i>
                                <span>{{ 'categories.videos.new'|trans|capitalize }}</span>
                            </a>
                        </div>
                    {% endif %}
                </h2>
            </div>

            <div class="row pb-3">
                {% for yt in youtubelinks %}
                    {{ include('home/_card_simplelinks.html.twig', { 'link': yt }) }}
                {% endfor %}
            </div>

            {% if youtubelinks|length > 0 %}
                <div class="row py-3">
                    <a href="{{ path('search', {'categories[]' : youtubelinks[0].category.id}) }}" class="col a-show-more text-center small">
                        <i class="bi bi-arrow-right-square me-1"></i> {{ 'show_more'|trans|capitalize }}  {{ 'show_more_videos'|trans }}
                    </a>
                </div>
            {% endif %}
        </div>

        <div class="row pb-2">
            <div class="col-sm-12 col-md-6 col-lg-8">
                <div class="video-row-title my-4 ml-1">
                    <h2 class="h2">
                        <span class="text-primary me-1"><i class="bi bi-git"></i></span> {{ 'home.top-channels'|trans|capitalize }}
                    </h2>
                </div>

                <div class="row pb-3">
                    {% for author in authors %}
                        {{ include('home/_creator_card.html.twig', {'author': author}) }}
                    {% endfor %}
                </div>

                <div class="row py-3">
                    <a href="{{ path('authors.index') }}" class="col a-show-more text-center small">
                        <i class="bi bi-arrow-right-square me-1"></i> {{ 'show_more'|trans|capitalize }} {{ 'show_more_authors'|trans }}
                    </a>
                </div>

                <div class="row pb-3">
                    <div class="col-12">
                        <div class="video-row-title my-4 ml-1">
                            <h2 class="h2">
                                <span class="text-primary me-1"><i class="{{ categoryIcon('ressources') }}"></i></span> {{ 'home.last-resources'|trans|capitalize }}

                                {% if app.user and is_granted('ROLE_ADMIN') %}
                                    <div class="float-end">
                                        <a href="{{ path('slinks.add', { 'category' : 'ressources' }) }}" class="btn btn-xs btn-outline-primary btn-showlabelonhover">
                                            <i class="bi bi-plus"></i>
                                            <span>{{ 'categories.ressources.new'|trans|capitalize }}</span>
                                        </a>
                                    </div>
                                {% endif %}
                            </h2>
                        </div>

                        <div class="row pb-3">
                            {% for ressource in ressources %}
                                {{ include('home/_card_ressources.html.twig', {'link': ressource}) }}
                            {% endfor %}
                        </div>
                    </div>
                </div>

                {% if ressources|length > 0 %}
                    <div class="row py-3 px-5">
                        <a href="{{ path('search', {'categories[]' : ressources[0].category.id}) }}" class="col a-show-more text-center small">
                            <i class="bi bi-arrow-right-square me-1"></i> {{ 'show_more'|trans|capitalize }}  {{ 'show_more_resources'|trans }}
                        </a>
                    </div>
                {% endif %}
            </div>

            <div class="col-sm-12 col-md-6 col-lg-4 ps-5">
                <div class="video-row-title my-4 ml-1">
                    <h2 class="h2">
                        <a href="https://www.hebdoo.fr" title="Accèder au site Hebdoo.fr dans une nouvelle fenetre" target="_blank" class="text-decoration-none">
                            <span class="text-primary me-1">H</span> {{ 'home.hebdoo'|trans|capitalize }}
                        </a><br>
                    </h2>
                </div>

                <div class="row pb-3">
                    <div class="col">
                        <h3 class="h3">
                            <a href="https://www.youtube.fr/watch?v={{ hebdoo.youtube }}"
                               class="text-decoration-none"
                               data-bs-toggle="tooltip"
                               data-bs-placement="top"
                               title="Accèder à la vidéo Hebdoo.fr sur Youtube"
                               target="_blank">
                                Semaine du {{ hebdoo.semaine }} <i class="ms-1 bi bi-box-arrow-up-right"></i>
                            </a>
                        </h3>
                        <div class="list-group">
                        {% for ressoure in hebdoo.ressources %}
                            <a href="{{ ressoure.url }}"
                               class="list-group-item list-group-item-action"
                               title="Ouvrir la ressource dans une nouvelle fenetre"
                               data-bs-toggle="tooltip"
                               data-bs-placement="top"
                            >
                                <strong>{{ ressoure.title }}</strong><i class="ms-1 bi bi-box-arrow-up-right"></i><br>
                                par {{ ressoure.pseudo }}
                            </a>
                        {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="video-row pb-2">
            <div class="row">
                <div class="col-12">
                    <div class="video-row-title my-4 ml-1">
                        <h2 class="h2">
                            <span class="text-primary me-1"><i class="bi bi-tags-fill"></i></span> {{ 'home.top-tags'|trans|capitalize }}
                        </h2>
                    </div>

                    <div class="row pb-3">
                        <div class="col text-center">
                            {% for tag in tags %}
                                <a href="{{ path('search', {'tags[]' : tag.id}) }}"
                                   class="tags-link"
                                   title="{{ tag }}"
                                   data-toggle="tooltip"
                                   data-placement="top"
                                ><img alt="{{ tag }}" src="https://img.shields.io/badge/{{ tag }}-white.svg?&style=for-the-badge&logo={{ tag.code }}&logoColor={{ tag.color }}" /></a>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="video-row pb-2">
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div class="video-row-title my-4 ml-1">
                        <h2 class="h2">
                            <span class="text-primary me-1"><i class="{{ categoryIcon('articles') }}"></i></span> {{ 'home.last-articles'|trans|capitalize }}

                            {% if app.user %}
                                <div class="float-end pe-2">
                                    <a href="{{ path('slinks.add', { 'category' : 'articles' }) }}" class="btn btn-xs btn-outline-primary btn-showlabelonhover">
                                        <i class="bi bi-plus"></i>
                                        <span>{{ 'categories.articles.new'|trans|capitalize }}</span>
                                    </a>
                                </div>
                            {% endif %}
                        </h2>
                    </div>

                    {% for article in articles %}
                        {{ include('home/_minimal_infos.html.twig', {'link': article}) }}
                    {% endfor %}

                    {% if articles|length > 0 %}
                        <div class="row py-3 px-5">
                            <a href="{{ path('search', {'categories[]' : articles[0].category.id}) }}" class="col a-show-more text-center small">
                                <i class="bi bi-arrow-right-square me-1"></i> {{ 'show_more'|trans|capitalize }}  {{ 'show_more_articles'|trans }}
                            </a>
                        </div>
                    {% endif %}
                </div>

                <div class="col-md-6 col-sm-12">
                    <div class="video-row-title my-4 ml-1">
                        <h2 class="h2">
                            <span class="text-primary me-1"><i class="{{ categoryIcon('podcasts') }}"></i></span> {{ 'home.last-podcasts'|trans|capitalize }}

                            {% if app.user %}
                                <div class="float-end pe-2">
                                    <a href="{{ path('slinks.add', { 'category' : 'podcasts' }) }}" class="btn btn-xs btn-outline-primary btn-showlabelonhover">
                                        <i class="bi bi-plus"></i>
                                        <span>{{ 'categories.podcasts.new'|trans|capitalize }}</span>
                                    </a>
                                </div>
                            {% endif %}
                        </h2>
                    </div>

                    {% for podcast in podcasts %}
                        {{ include('home/_minimal_infos.html.twig', {'link': podcast}) }}
                    {% endfor %}

                    {% if podcasts|length > 0 %}
                        <div class="row py-3 px-5">
                            <a href="{{ path('search', {'categories[]' : podcasts[0].category.id}) }}" class="col a-show-more text-center small">
                                <i class="bi bi-arrow-right-square me-1"></i> {{ 'show_more'|trans|capitalize }}  {{ 'show_more_podcasts'|trans }}
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

    </div>
{% endblock %}
