{% extends 'base.html.twig' %}

{% block title %}{{ 'nav.register'|trans|capitalize }}{% endblock %}

{% block body %}
<section class="my-2 p-2 text-white" id="login-section">
    <div class="container">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal text-white">{{ 'nav.signin'|trans|capitalize }}</h1>

        <div class="row">
            <div class="col-7">
                {{ form_start(form) }}

                <div class="form-group">
                    {{ form_row(form.email, {
                        'attr': {
                            'class': 'form-control',
                            'id': 'inputEmail'
                        }})
                    }}
                </div>

                <div class="form-group">
                    {{ form_row(form.username, {
                        'attr': {
                            'class': 'form-control',
                            'id': 'inputUsername'
                        }})
                    }}
                </div>

                <div class="form-group">
                    {{ form_row(form.password, {
                        'attr': {
                            'class': 'form-group',
                            'id': 'inputPassword',
                        }})
                    }}
                </div>

                <div class="form-group">
                    {{ form_row(form.password_repeat, {
                        'attr': {
                            'class': 'form-group',
                            'id': 'inputPasswordRepeat',
                        }})
                    }}
                    <div class="help-block text-right">{{ form_errors(form.password_repeat) }}</div>
                </div>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                <button class="btn btn-outline-success" type="submit">
                    {{ 'nav.register'|trans|capitalize }}
                </button>

                {{ form_end(form) }}
            </div>

            <div class="col-5">
                <h3 class="h3 text-white">{{ 'btn.social.connect'|trans|capitalize }}</h3>
                <small>{{ 'btn.social.register_help'|trans|capitalize }}</small>
                <a class="btn btn-danger btn-block btn-sm" href="{{ path('social_connect', { 'service' : 'google' }) }}">
                    <i class="fab fa-google"></i> Compte Google
                </a>
                <a class="btn btn-secondary btn-block btn-sm" href="{{ path('social_connect', { 'service' : 'github' }) }}">
                    <i class="fab fa-github"></i> Compte Github
                </a>
            </div>
        </div>
    </div>
</section>
{% endblock %}
